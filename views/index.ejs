<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="viewport" content="width=device-width, minimal-ui">
        <meta charset="utf-8">  
        <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans">
        <link  href="http://fonts.googleapis.com/css?family=Abril+Fatface:regular,italic,bold,bolditalic" rel="stylesheet" type="text/css" >       
        <%- css("bootstrap") %>
        <%- css("bootstrap-responsive") %>
        <%- css("custom") %>
        <%- css("carousel-style") %>
        <%- js("jquery-2.1.0") %>
        <%- js("jquery-ui.min") %>
        <%- js("bootstrap.min") %>
        <%- js("jquery.fittext") %>
        <script src="js/app.js"></script>
        <title>Such Whimsy</title>
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top-right">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>
            <div class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                <li class="active"><a href="#">Home</a></li>
                <li><a href="#about">Top Quotes</a></li>
                <li><a href="#contact">Login</a></li>
              </ul>
            </div><!--/.nav-collapse -->
          </div>
        </div>
        <div class="container fill">
          <div id="myCarousel" class="carousel slide">
            <div class="carousel-inner">
              <div id="<%= activeQuoteId %>" class="active item">
                <div class="fill">
                  <div class="container text-center">
                    <p>
                        <span class="quoteHolder">
                            <%= activeQuoteBody %>
                        </span>
                    </p>
                  </div>
                </div>
              </div>
            <% for (var i = 0; i < quoteSet.length; i++) { %>
              <div id="<%= quoteSet[i].id %>" class="item">
                <div class="fill">
                  <div class="container">
                    <p> 
                        <span class="quoteHolder">
                            <%= quoteSet[i].body %>
                        </span>
                    </p>
                  </div>
                </div>
              </div>
            <% } %>
            </div>
            <div class="pull-center">
              <a class="carousel-control left" href="#myCarousel" data-slide="prev" onclick="carouselGetPrevious()">‹</a>
              <a class="carousel-control right" href="#myCarousel" data-slide="next" onclick="carouselGetNext()">›</a>
            </div>
            <div class="row-fluid">
                <div class="span4 vote-buttons">
                | <span id="up" class="small-button btn"><span class="post-btn">&nbsp;Like&nbsp;</span></span> 
                | <span id="down" class="small-button btn"><span class="post-btn">&nbsp;Hate&nbsp;</span></span>
                | <span id="share" class="small-button btn"><span class="post-btn">&nbsp;Share&nbsp;</span></span>
                |
                </div>
            </div> 
          </div>
        </div>
    </body>
</html>